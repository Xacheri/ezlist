<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".AislesActivity">

    <TextView
        android:id="@+id/aisleOrderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?android:actionBarSize"
        android:text="@string/aisle_order"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/aisleInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="@string/aisle_instructions"
        android:textAlignment="center" />

    <Button
        android:id="@+id/deleteAisleBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/delete_an_aisle" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/aisleRecycleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>